<h1>create an article</h1>	
<% if @article.errors.any? %>
<ul>
<% @article.errors.full_messages each do |msg| %>
<li> <%= msg%> </li>
</ul>
<% end %>

<%= form_for @article do |k|%>
<p>
<%= k.label :title%><br/>
<%= k.text_field :title%>
</p>

<p>
<%= k.label :description%><br/>
<%= k.text_area :description%>
</p>

<p>
<%= k.submit%><br/>

</p>

<%end%>	